pip install plyer
import time
from plyer import notification

def send_notification(title, message):
    notification.notify(
        title=title,
        message=message,
        timeout=10  
    )
title = "You have a reminder!"

message= 'Stay on task'

notification.notify(title= title,
                    message= message,
                    timeout= 15,
                    toast= False)
time.sleep(60*60)
if __name__ == "__main__":
    send_notification(title, message)
print("\U0001F606") 
